@*
    Views/Shared/_Sidebar.cshtml
*@
@{
    ViewData["Title"] = "SidebarStudent";
}

<!-- Views/Shared/_SidebarStudent.cshtml -->
<div class="sidebar">
    <div class="sidebar-header">
        <div class="logo">
            <i class="fas fa-graduation-cap logo-icon"></i>
            <span class="logo-text">EduManage</span>
        </div>
    </div>

    <div class="sidebar-content">
        <!-- Dashboard -->
        <a asp-controller="Student" asp-action="Dashboard" class="menu-item">
            <i class="fas fa-home menu-icon"></i>
            <span class="menu-text">Trang chủ</span>
        </a>

        <!-- Thông tin cá nhân -->
        <a asp-controller="Student" asp-action="Profile" class="menu-item">
            <i class="fas fa-user menu-icon"></i>
            <span class="menu-text">Thông tin cá nhân</span>
        </a>

        <!-- Điểm số -->
        <a asp-controller="Student" asp-action="Grades" class="menu-item">
            <i class="fas fa-chart-line menu-icon"></i>
            <span class="menu-text">Điểm số</span>
        </a>

        <!-- Thời khóa biểu -->
        <a asp-controller="Student" asp-action="Schedule" class="menu-item">
            <i class="fas fa-calendar-alt menu-icon"></i>
            <span class="menu-text">Thời khóa biểu</span>
        </a>

        <!-- Điểm danh -->
        <a asp-controller="Student" asp-action="Attendance" class="menu-item">
            <i class="fas fa-calendar-check menu-icon"></i>
            <span class="menu-text">Điểm danh</span>
        </a>

        <!-- Môn học -->
        <a asp-controller="Student" asp-action="Subjects" class="menu-item">
            <i class="fas fa-book menu-icon"></i>
            <span class="menu-text">Môn học</span>
        </a>

        <!-- Thông báo -->
        <a asp-controller="Student" asp-action="Notifications" class="menu-item">
            <i class="fas fa-bell menu-icon"></i>
            <span class="menu-text">Thông báo</span>
        </a>
    </div>

    <div class="sidebar-bottom">
        <!-- Tài liệu học tập -->
        <a asp-controller="Student" asp-action="Materials" class="menu-item">
            <i class="fas fa-book-open menu-icon"></i>
            <span class="menu-text">Tài liệu học tập</span>
        </a>
    </div>
</div>
