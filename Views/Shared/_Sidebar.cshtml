@*
    Views/Shared/_Sidebar.cshtml
*@
@{
    ViewData["Title"] = "Chỉ là Sidebar";
}

<!-- Sidebar -->
<div class="sidebar">
    <div class="sidebar-header">
        <div class="logo">
            <i class="fas fa-graduation-cap logo-icon"></i>
            <span class="logo-text">EduManage</span>
        </div>
    </div>

    <div class="sidebar-content">
        <!-- Menu Dashboard/Home -->
        <a asp-controller="Home" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")" data-page="dashboard">
            <i class="fas fa-home menu-icon"></i>
            <span class="menu-text">Trang chủ</span>
        </a>

        <!-- Menu Students -->
        <a asp-controller="Student" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Student" ? "active" : "")" data-page="students">
            <i class="fas fa-users menu-icon"></i>
            <span class="menu-text">Quản lý học sinh</span>
        </a>

        <!-- Menu Classes -->
        <a asp-controller="Class" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Class" ? "active" : "")" data-page="classes">
            <i class="fas fa-chalkboard menu-icon"></i>
            <span class="menu-text">Lớp học</span>
        </a>

        <!-- Menu Subjects -->
        <a asp-controller="Subject" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Subject" ? "active" : "")" data-page="subjects">
            <i class="fas fa-book menu-icon"></i>
            <span class="menu-text">Môn học</span>
        </a>

        <!-- Menu Grades -->
        <a asp-controller="Grade" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Grade" ? "active" : "")" data-page="grades">
            <i class="fas fa-chart-line menu-icon"></i>
            <span class="menu-text">Điểm số</span>
        </a>

        <!-- Menu Attendance -->
        <a asp-controller="Attendance" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Attendance" ? "active" : "")" data-page="attendance">
            <i class="fas fa-calendar-check menu-icon"></i>
            <span class="menu-text">Điểm danh</span>
        </a>

        <!-- Menu Reports -->
        <a asp-controller="Report" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Report" ? "active" : "")" data-page="reports">
            <i class="fas fa-file-alt menu-icon"></i>
            <span class="menu-text">Báo cáo</span>
        </a>
    </div>

    <div class="sidebar-bottom">
        <!-- Settings -->
        <a asp-controller="Settings" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"].ToString() == "Settings" ? "active" : "")" data-page="settings">
            <i class="fas fa-cog menu-icon"></i>
            <span class="menu-text">Cài đặt</span>
        </a>


    </div>
</div>
