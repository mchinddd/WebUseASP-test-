@model WebUseASP_test_.Models.User
@{
    ViewData["Title"] = "Sửa người dùng";
    Layout = "_Layout";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
}

<h2>Sửa người dùng</h2>
<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserID" />

    <div class="form-group mb-3">
        <label class="form-label">Họ và tên</label>
        <input asp-for="FullName" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Tài khoản</label>
        <input asp-for="Username" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Vai trò</label>
        <select asp-for="RoleID" class="form-control" required>
            <option value="1">Admin</option>
            <option value="2">Giáo viên</option>
            <option value="3">Học sinh</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Trạng thái</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Hoạt động</option>
            <option value="false">Ngừng hoạt động</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Users" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
}