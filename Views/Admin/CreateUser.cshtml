@model WebUseASP_test_.Models.User
@{
    ViewData["Title"] = "Thêm người dùng mới";
    Layout = "_Layout";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <style>
        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <partial name="_SidebarAdmin" />

        <!-- Main content -->
        <div class="col-md-9 ms-sm-auto">
            <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Thêm người dùng mới</h1>
                <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
            </div>

            <!-- Hiển thị thông báo -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <div class="card">
                <div class="card-header">
                    <h5>Thông tin người dùng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateUser" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <label asp-for="Username" class="col-sm-2 col-form-label">Tài khoản</label>
                            <div class="col-sm-10">
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Password" class="col-sm-2 col-form-label">Mật khẩu</label>
                            <div class="col-sm-10">
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="form-text text-muted">Mật khẩu phải ít nhất 6 ký tự, chứa ít nhất một chữ cái viết hoa, một chữ cái viết thường, một số và một ký tự đặc biệt (ví dụ:, #, $). (Validation này cần thêm ở model hoặc controller nếu chưa có; hiện tại model chỉ yêu cầu bắt buộc).</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="FullName" class="col-sm-2 col-form-label">Họ tên</label>
                            <div class="col-sm-10">
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <small class="form-text text-muted">Email phải đúng định dạng (ví dụ: example@domain.com). Validation tự động từ [EmailAddress].</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Phone" class="col-sm-2 col-form-label">Số điện thoại</label>
                            <div class="col-sm-10">
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                                <small class="form-text text-muted">Số điện thoại nên là định dạng Việt Nam (ví dụ: 0123456789 hoặc +84123456789). Nếu cần validation nghiêm ngặt, thêm [Phone] attribute vào model hoặc regex ở controller (hiện tại model không có validation cụ thể cho phone).</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="RoleID" class="col-sm-2 col-form-label">Vai trò</label>
                            <div class="col-sm-10">
                                <select asp-for="RoleID" class="form-select">
                                    <option value="">Chọn vai trò</option>
                                    <option value="1">Admin</option>
                                    <option value="2">Giáo viên</option>
                                    <option value="3">Học sinh</option>
                                </select>
                                <span asp-validation-for="RoleID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label">Hoạt động</label>
                                </div>
                            </div>
                        </div>

                        <!-- CreatedDate sẽ được set tự động ở controller, không cần input -->

                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Thêm mới</button>
                                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}