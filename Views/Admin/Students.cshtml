@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Quản lý học sinh";
    Layout = "_Layout";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="main-wrapper">
    <partial name="_SidebarAdmin" />
    <div class="main-content">
        <partial name="_Header" />
        <div class="content">
<h2>Quản lý học sinh</h2>
<a asp-action="CreateStudent" class="btn btn-primary mb-3">Thêm học sinh</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã học sinh</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
            <th>Lớp</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentCode</td>
                <td>@s.FullName</td>
                <td>@s.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>@s.Gender</td>
                <td>@s.Address</td>
                <td>@s.ClassName</td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@s.StudentID" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="DeleteStudent" asp-route-id="@s.StudentID" class="btn btn-sm btn-danger" onclick="return confirm('Xóa học sinh này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
}