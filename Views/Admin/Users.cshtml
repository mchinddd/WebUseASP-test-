@model IEnumerable<WebUseASP_test_.Models.User>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "_Layout";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <style>
        .role-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.85rem;
        }

        .role-admin {
            background: #6f42c1;
            color: white;
        }

        .role-teacher {
            background: #20c997;
            color: white;
        }

        .role-student {
            background: #0d6efd;
            color: white;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <partial name="_SidebarAdmin" />

        <!-- Main content -->
        <div class="col-md-9 ms-sm-auto">
            <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Quản lý người dùng</h1>
                <a class="btn btn-primary" asp-action="CreateUser">
                    <i class="fas fa-plus"></i> Thêm người dùng
                </a>
            </div>

            <!-- Hiển thị thông báo -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <div class="card">
                <div class="card-header">
                    <div class="input-group" style="max-width: 300px;">
                        <input type="text" class="form-control" placeholder="Tìm kiếm..." id="searchInput">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Tài khoản</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Vai trò</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in Model)
                                {
                                    <tr>
                                        <td>@u.UserID</td>
                                        <td>@u.Username</td>
                                        <td>@u.FullName</td>
                                        <td>@u.Email</td>
                                        <td>
                                            @if (u.RoleID == 1)
                                            {
                                                <span class="role-badge role-admin">Admin</span>
                                            }
                                            else if (u.RoleID == 2)
                                            {
                                                <span class="role-badge role-teacher">Giáo viên</span>
                                            }
                                            else if (u.RoleID == 3)
                                            {
                                                <span class="role-badge role-student">Học sinh</span>
                                            }
                                        </td>
                                        <td>
                                            @if (u.IsActive)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Ngừng</span>
                                            }
                                        </td>
                                        <td>@u.CreatedDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-action="EditUser"
                                               asp-route-id="@u.UserID">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger delete-btn"
                                                    data-id="@u.UserID">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa người dùng này?</p>
                <p class="text-danger">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script>
        // Xử lý xóa người dùng
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const userId = this.getAttribute('data-id');
                const deleteForm = document.getElementById('deleteForm');
                deleteForm.action = `@Url.Action("DeleteUser")/${userId}`;

                const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
                modal.show();
            });
        });

        // Tìm kiếm người dùng
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchText = this.value.toLowerCase();
            document.querySelectorAll('tbody tr').forEach(row => {
                const name = row.cells[2].textContent.toLowerCase();
                const email = row.cells[3].textContent.toLowerCase();
                if (name.includes(searchText) || email.includes(searchText)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}