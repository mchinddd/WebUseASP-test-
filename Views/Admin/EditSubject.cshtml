@model WebUseASP_test_.Models.Subject
@{
    ViewBag.Title = "Edit Subject";
    Layout = "_Layout";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="main-wrapper">
    <partial name="_SidebarAdmin" />
    <div class="main-content">
        <partial name="_Header" />
        <div class="content">

<h2>Chỉnh sửa Môn học</h2>

@using (Html.BeginForm("Edit", "Subjects", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.SubjectID)

    <div class="mb-3">
        @Html.LabelFor(m => m.SubjectName, "Tên môn học")
        @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubjectName)
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Description, "Mô tả")
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(m => m.Description)
    </div>

    <div class="mb-3">
        @Html.Label("Giáo viên phụ trách")
        @Html.DropDownList("TeacherID", ViewBag.Teachers as SelectList, "-- Chọn giáo viên --", new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.Label("Khối/Lớp áp dụng")
        @Html.DropDownList("GradeOrClass", ViewBag.GradesOrClasses as SelectList, "-- Chọn khối/lớp --", new { @class = "form-control" })
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.IsActive, "Hoạt động", new { @class = "form-check-label" })
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a href="@Url.Action("Index", "Subjects")" class="btn btn-secondary">Hủy</a>
}
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
}