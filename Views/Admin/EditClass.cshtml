@model WebUseASP_test_.Models.ViewModels.EditClassViewModel
@{
    ViewData["Title"] = "Edit Class";
    Layout = "_Layout";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
}

<h2>Sửa lớp học</h2>

<form asp-action="EditClass" method="post">
    <input type="hidden" asp-for="ClassID" />

    <div class="form-group">
        <label asp-for="ClassName"></label>
        <input asp-for="ClassName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AcademicYear"></label>
        <input asp-for="AcademicYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TeacherID">Giáo viên chủ nhiệm</label>
        <select asp-for="TeacherID" asp-items="Model.Teachers" class="form-control">
            <option value="">-- Chọn giáo viên --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Học sinh trong lớp</label>
        <select asp-for="SelectedStudentIDs" asp-items="Model.Students"
                multiple="multiple" class="form-control">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Classes" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}