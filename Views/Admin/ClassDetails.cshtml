@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Danh sách học sinh lớp " + ViewBag.ClassName;
    Layout = "_Layout";
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="main-wrapper">
    <partial name="_SidebarAdmin" />
    <div class="main-content">
        <partial name="_Header" />
        <div class="content">
<h2>Danh sách học sinh - @ViewBag.ClassName (@ViewBag.AcademicYear)</h2>

<a asp-action="Classes" class="btn btn-secondary mb-3">Quay lại</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã học sinh</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
                        <th>Điều chỉnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentCode</td>
                <td>@s.FullName</td>
                <td>@s.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>@s.Gender</td>
                <td>@s.Address</td>
                            <td>
                                <form asp-action="RemoveStudentFromClass" method="post" style="display:inline">
                                    <input type="hidden" name="studentId" value="@s.StudentID" />
                                    <input type="hidden" name="classId" value="@ViewBag.ClassID" />
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa khỏi lớp</button>
                                </form>
                            </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
}